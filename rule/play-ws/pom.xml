<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.opentracing.contrib.specialagent.rule</groupId>
    <artifactId>rule</artifactId>
    <version>1.7.4-SNAPSHOT</version>
  </parent>
  <artifactId>play-ws</artifactId>
  <name>SpecialAgent Rule for Play WS</name>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <sa.rule.name>play:ws</sa.rule.name>
    <min.version>2.7.3</min.version>
    <max.version>2.7.5</max.version>

    <!-- fixme: max version check -->
    <passCompatibility>com.typesafe.play:play-ws_2.13:[${min.version},]</passCompatibility>
    <!-- FIXME: The compatibility of this rule is very unusual, and very restricted. -->
    <!-- FIXME: this check probably mess up 2.13 ? we need both checks -->
    <!--<passCompatibility>com.typesafe.play:shaded-asynchttpclient:[${min.version},2.0.5),(2.0.5,2.1.0-M1)</passCompatibility>-->
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.typesafe.play</groupId>
      <artifactId>shaded-asynchttpclient</artifactId>
      <version>2.0.8</version> <!-- fixme: is this for play 2.7.5? <version>2.1.2</version> -->
      <optional>true</optional>
      <scope>provided</scope>
    </dependency>
    <!-- otherwise 0.8.0 is selected which is not avail for scala 2.13 -->
    <dependency>
      <groupId>org.scala-lang.modules</groupId>
      <artifactId>scala-java8-compat_2.13</artifactId>
      <version>0.9.0</version>
      <optional>true</optional>
      <scope>provided</scope>
    </dependency>
    <!-- or standalone? !! -->
    <dependency>
      <groupId>com.typesafe.play</groupId>
      <artifactId>play-ahc-ws-standalone_2.13</artifactId>
      <version>2.0.6</version>
      <optional>true</optional>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>