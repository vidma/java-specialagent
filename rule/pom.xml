        <dependency>
          <!-- Needed for JUnit tests from IDE -->
          <groupId>org.apache.maven</groupId>
          <artifactId>maven-model</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <!-- FIXME: why are there 2 profiles here? -->
    <profile>
      <id>default</id>
      <activation>
        <file>
          <exists>src</exists>
        </file>
        <property>
          <name>!assemble</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>io.opentracing.contrib.specialagent</groupId>
          <artifactId>opentracing-specialagent</artifactId>
          <version>${project.version}</version>
          <type>test-jar</type>
          <scope>test</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>io.opentracing.contrib.specialagent</groupId>
            <artifactId>specialagent-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>fingerprint</id>
                <goals>
                  <goal>fingerprint</goal>
                </goals>
                <phase>process-classes</phase>
              </execution>
              <execution>
                <id>test-compatibility</id>
                <goals>
                  <goal>test-compatibility</goal>
                </goals>
                <phase>test</phase>
                <configuration>
                  <passCompatibility>${passCompatibility}</passCompatibility>
                  <failCompatibility>${failCompatibility}</failCompatibility>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <name>${sa.plugin.name}</name>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
